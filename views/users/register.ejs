<% layout('layouts/boilerplate')%>
<div class="form-popup" id="myForm">
    <form action="/register" method="POST" class="form-container" novalidate>
        <h1>Sign Up</h1>
        <div class="mb-2">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required>
            <div class="invalid-feedback">
                Username is required.
            </div>
        </div>
        <div class="mb-2">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
            <div class="invalid-feedback">
                Email is required.
            </div>
        </div>
        <div class="mb-2">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
            <div class="invalid-feedback">
                Password must be at least 8 characters and include one uppercase letter, lowercase letter, and special character.
            </div>
        </div>
        <div class="mb-2">
            <label for="confirmPassword">Confirm Password</label>
            <input class="" type="password" id="confirmPassword" name="confirmPassword" required>
            <div class="invalid-feedback">
                Passwords must match.
            </div>
        </div>
        <button class="btn" onclick="registerUser()">Register</button>
    </form>
</div>