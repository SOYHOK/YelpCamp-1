
<% layout('layouts/boilerplate')%>
        <div class="form-popup" id="myForm">
            <form action="/login" method="POST" class="form-container" id="loginForm">
                <h1>Login</h1>
                <div class="mb-3">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required>
                    <div class="invalid-feedback">
                        Username is required.
                    </div>
                </div>
        
                <div class="mb-3">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                    <div class="invalid-feedback">
                        Password must be at least 8 characters and include one uppercase letter, lowercase letter, and special character.
                    </div>
                </div>
                <button class="btn" type="submit">Login</button>
                <p><a href="#">Forget password?</a><a href="/register" class="sign-up"> Sign up</a></p>
            </form>
        </div>
        
    