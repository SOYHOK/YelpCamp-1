<% layout('layouts/boilerplate')%>
<div class="news ">
    <% if (currentUser && currentUser._id.toString() === '652463cce658bebe7040a883') { %>
    <a href="/videos/new">Add Video</a>
    <% } %>
</div>
<h1>Welcome to our cook teaching!</h1>
<h2>Enjoy to learn how to cook khmer food!</h2>

<div class="row mt-4">
    <% for (let video of videos) { %>
        <div class="col-3">
            <div class="view">
                <div class="col">
                    <div class="col">
                        <div class="mb-3">
                            <div class="carousel-inner">
                                <% for(let vdo of video.images) { %>
                                <div class="carousel-item active">
                                    <img src="<%= vdo.url%>" alt="<%= %>" class="img-fluid">
                                </div>
                                <% } %>
                            </div>
                           
                        </div>
                    </div>

                    <div class="col text-center" id="title">
                        <a href="/videos/<%= video._id %>">
                            <h2><%= video.title %></h2>
                        </a>
                    </div>
                    <div class="col">
                        <p>
                            <%= video.description %>
                        </p>
                    </div>
                    <div class="col">
                        <p>$<%= video.videoUrl %>
                        </p>
                    </div>
                    <div class="mb-3">
                        <button onclick="Addtochart()" id="addtochart">Add to Chart</button>
                   </div>
                    <div style="display: inline; text-align: start; justify-content: space-between;">
                        <% if (currentUser && currentUser._id.toString() === '652463cce658bebe7040a883') { %>
                        <a href="/videos/<%= video._id %>/edit" class="d-inline text-start justify-content-between" id="edit">Edit</a>
                        <% } %>
                    </div>
                    <div style="display: inline; text-align: end; justify-content: space-between;">
                        <form action="/videos/<%= video._id %>?_method=DELETE" method="POST" class="d-inline justify-content-between">
                            <% if (currentUser && currentUser._id.toString() === '652463cce658bebe7040a883') { %>
                            <button class="d-inline justify-content-between" onclick="Delete()" id="delete">Delete</button>
                            <% } %>
                        </form>
                    </div>
                    

                </div>
            </div>
        </div>

        <% } %>
</div>

    
<script>
    const videos = { features: <%- JSON.stringify(videos) %>} // convert to json
</script>

