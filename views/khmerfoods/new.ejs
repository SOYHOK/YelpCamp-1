<% layout('layouts/boilerplate')%>

<form action="/khmerfoods" method="POST" class="addnew" enctype="multipart/form-data">
    <h1>Add New Food</h1>
    <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input type="text" title="title" id="title" name="khmerfood[title]" class="form-control" required>
    </div>

    <div class="mb-2">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" id="description" name="khmerfood[description]" class="form-control" required></textarea>
    </div>

    <div class="mb-2">
        <label for="price" class="form-label">Price</label>
        <div class="input-price">
            <span class="input-price-text" id="price-label">$</span>
            <input type="number" step="0.01" price="price" id="price" name="khmerfood[price]" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label">
        </div>
    </div>

    <input type="file" name="images" id="images" class="form-control mt-4" required multiple>

    <!-- <div class="mb-2">
        <label for="image" class="form-label">Image</label>
        <input type="file" image="image" id="image" name="khmerfood[image]" class="form-control" required multiple>
    </div> -->

    <div>
        <button type="submit" class="btn">Submit</button>
    </div>

    <div class="mb-5 mt-4">
        <a href="/khmerfoods" class="back">Back</a>
    </div>
</form>
