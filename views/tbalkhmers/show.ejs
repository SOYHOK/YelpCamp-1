<% layout('layouts/boilerplate')%>
<div class="addnew" id="detail">
    <h1>Details</h1>

    <div class="mb-3 text-center">
        <div class="carousel-inner">
            <% for(let img of tbalkhmer.images) { %>
            <div class="carousel-item active">
                <img src="<%= img.url%>" alt="<%= %>" class="img-fluid" >
            </div>
            <% } %>
        </div>
    </div> 
    <div class="mb-3">
        <h2><%= tbalkhmer.title %></h2> 
    </div>

    <div class="mb-3 ml-3">
        <p><%= tbalkhmer.description %></p>
    </div>

    <div class="mb-3 ml-3">
        <p>$ <%= tbalkhmer.price %></p>
    </div>
   
    <div class="col ml-3">
        <% if (currentUser && currentUser._id.toString() === '655b2158c89efc6590c4012d') { %>
            <a href="/tbalkhmers/<%= tbalkhmer._id %>/edit">Edit</a>
        <% } %>
    </div>
    <div class="col">
        <% if (currentUser && currentUser._id.toString() === '655b2158c89efc6590c4012d') { %>
            <form action="/tbalkhmers/<%= tbalkhmer._id %>?_method=DELETE" method="POST">
                <button class="btn" onclick="Delete()" id="delete">Delete</button>
            </form>
        <% } %>
    </div>


    <div class="mb-5 mt-4 ml-3">
        <a href="/tbalkhmers" class="back">Back</a>
    </div>

</div>
