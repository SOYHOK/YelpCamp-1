<% layout('layouts/boilerplate')%>


<form action="/tbalkhmers/<%= tbalkhmer._id %>?_method=PUT" method="POST" class="addnew" enctype="multipart/form-data">
    <h1>Edit</h1>

    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" title="title" id="title" name="tbalkhmer[title]" class="form-control" value="<%= tbalkhmer.title %>" required>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" id="description" name="tbalkhmer[description]" class="form-control"><%= tbalkhmer.description %></textarea>
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-price">
            <span class="input-price-text" id="price-label">$</span>
            <input type="number" price="price" id="price" name="tbalkhmer[price]" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" value="<%= tbalkhmer.price %>">
        </div>
    </div>

    <!-- <div>
        <label for="image">Image</label>
        <input type="file" name="images" id="images" class="form-control" required multiple>  
    </div>
    <div class="carousel-inner">
        <% for(let img of tbalkhmer.images) { %>
        <div class="carousel-item active">
            <img src="<%= img.url%>" alt="<%= %>" class="img-fluid w-50 h-50">
        </div>
        <% } %>
    </div> -->
    <div>
        <label for="image">Image</label>
        <input type="file" name="images" id="images" class="form-control" multiple>  
    </div>

    <div class="mb-3">
        <% tbalkhmer.images.forEach(function(img, i) {  %>

        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
        <div class="form-check-inline">
            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
        </div>
        <label for="image-<%=i%>">Delete?</label>
        <% })%>
    
    <div>
        <button type="submit" class="btn">Submit</button>
    </div>

    <div class="mb-5 mt-4">
        <a href="/tbalkhmers" class="back">Back</a>
    </div>

</form>


<script>
    // active route
    var currentLocation = window.location.href;
    var menuItem = document.querySelectorAll('a');
    var menuLength = menuItem.length;
    for (var i = 0; i < menuLength; i++) {
        if (menuItem[i].href === currentLocation) {
            menuItem[i].className = "active";
        }
    }
    
</script>